                <payment_action>authorize</payment_action>
                <order_status>pending_payment</order_status>
                <is_gateway>1</is_gateway>
                <can_use_internal>1</can_use_internal>
                <can_use_checkout>1</can_use_checkout>
                <can_initialize>1</can_initialize>
                <can_authorize>1</can_authorize>
                <can_capture>0</can_capture>
                <can_fetch_transaction_info>1</can_fetch_transaction_info>
                <can_fetch_transaction_information>1</can_fetch_transaction_information>
                <qr_code_expiration>+1 day</qr_code_expiration>
                <paymentInfoKeys>is_sandbox,payment_id,expiration_date,payment_link_qrcode,payment_text_pix</paymentInfoKeys>
                <privateInfoKeys>is_sandbox,payment_id</privateInfoKeys>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
            </ricardomartins_pagbank_pix>
        </payment>
    </default>
</config>
