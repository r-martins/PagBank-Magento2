                <can_refund>1</can_refund>
                <can_cancel>1</can_cancel>
                <can_review_payment>1</can_review_payment>
                <can_deny_payment>1</can_deny_payment>
                <can_accept_payment>1</can_accept_payment>
                <can_fetch_transaction_info>1</can_fetch_transaction_info>
                <can_fetch_transaction_information>1</can_fetch_transaction_information>
                <can_authorize_vault>1</can_authorize_vault>
                <can_capture_vault>1</can_capture_vault>
                <cc_3ds>0</cc_3ds>
                <cc_3ds_allow_continue>0</cc_3ds_allow_continue>
                <cctypes_pagbank_mapper><![CDATA[{"AE":"AMEX","AU":"AURA","DI":"DISCOVER","DN":"DINERS","ELO":"ELO","HC":"HIPERCARD","MC":"MASTERCARD","VI":"VISA"}]]></cctypes_pagbank_mapper>
                <cctypes>AE,AU,DI,DN,ELO,HC,MC,MI,VI,unknown</cctypes>
                <paymentInfoKeys>is_sandbox,payment_id,charge_id,brand,cc_owner,cc_last_4,installments,charge_link,authorization_code,nsu,threed_secure_id</paymentInfoKeys>
                <privateInfoKeys>is_sandbox,payment_id,charge_id,charge_link,status,authorization_code,nsu,threed_secure_id</privateInfoKeys>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
            </ricardomartins_pagbank_cc>
            <ricardomartins_pagbank_cc_vault>
                <active>1</active>
                <model>RicardoMartinsPagBankCcVaultFacade</model>
                <title>PagBank Stored Credit Card</title>
                <group>ricardomartins_pagbank_group</group>
                <paymentInfoKeys>is_sandbox,payment_id,charge_id,brand,cc_owner,cc_last_4,installments,charge_link,authorization_code,nsu</paymentInfoKeys>
                <privateInfoKeys>is_sandbox,payment_id,charge_id,charge_link,status,authorization_code,nsu</privateInfoKeys>
            </ricardomartins_pagbank_cc_vault>
