<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
            	<value id="pagbank-src" type="host">*.pagseguro.com.br</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="pagbank-img" type="host">*.pagseguro.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="pagbank-connect-sandbox" type="host">sandbox.sdk.pagseguro.com</value>
                <value id="pagbank-connect-prod" type="host">sdk.pagseguro.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
